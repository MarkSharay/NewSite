@using PRAS_Task.Data.Models;
@model EngNew;

<form asp-action="Update" asp-controller="EngNews" enctype="multipart/form-data">
    <div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Model Name:</label>
            <input type="text" asp-for="name" class="form-control form-control-sm" />
        </div>
        <div class="form-group">
            <img runat="server" src="~/images/@Model.picture" height="400" />
        </div>
        <div class="form-group">
            <label> Change photo</label>
            <input asp-for="picture" type="file" class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label>Text of article</label>
            <textarea asp-for="text" class="form-control  form-control-sm"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-success btn-outline-dark" />
        </div>
    </div>
</form>
